<div>
  <h4>By <%= comment.author %></h4>
  <p>Posted <%= distance_of_time_in_words(comment.story.created_at, comment.created_at) %> later</p>
  <p class="comment"><%= comment.body %></p>
  <%= link_to "delete", [comment.story, comment], method: :delete, data: {confirm: "Really delete the comment?"} %>
</div>